<h2>Your events</h2>

{{#each yourEvents}}
<div class="event-container today">
  <div class="event-column-left"></div>
  <div class="event-column-center" id="{{this._id}}">
    <div class="location">{{location.name}}</div>
    <div class="event">{{event}}</div>
    <div class="info-wrapper">
      <div class="description">description: {{description}}</div>
    </div>
  </div>
  <div class="event-column-right">
    <form action="/yourevents/edit/{{_id}}" method="get">
      <button>Edit event</button>
    </form>
    <form action="/yourevents/delete/{{_id}}" method="post">
      <button>Delete event</button>
    </form>
  </div>
</div>
{{/each}}


<form action="/yourevents/add" method="get">
  <button>Add event</button>
</form>