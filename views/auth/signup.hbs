<div class="profile-container" id="signup">
  <h2 class="title">Signup</h2>

  <form action="/auth/signup" method="POST" class="input-form" id="form-container">
    <div class="username-wrapper">
      <label class="form-label" for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="Your username">
    </div>
    <div class="password-wrapper">
      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password">
    </div>

    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <button>Create account</button>

    <p class="account-message">Do you already have an account?</p>
    <a href="/auth/login">Login</a>
  </form>
</div>